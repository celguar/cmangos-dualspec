###################################################################################################################
# TRANSMOG SETTINGS
#
#    Transmog.Enable
#        Enable Transmog system
#        Default: 1 (enable - enables transmog system)
#                 0 (disable - disables transmog system)
#
#    Transmog.CostFee
#        How much (in copper) should the player pay extra per transmog item
#		 The total price is (sell price + cost fee) * cost multiplier
#        Default: 0
#
#    Transmog.CostMultiplier
#        The multiplier price to pay per transmog item
#		 The total price is (sell price + cost fee) * cost multiplier
#        Default: 1.0
#
#    Transmog.TokenRequired
#        If each transmog item requires the player to have a token
#        Default: 0 (disabled)
#				  1 (enabled)
#
#    Transmog.TokenEntry
#        The entry id of the item to use as a token
#        Default: 0
#
#    Transmog.TokenAmount
#        The amount of tokens to retrieve from the player per transmog item
#        Default: 1
#
###################################################################################################################

Transmog.Enable = 0
Transmog.CostFee = 0
Transmog.CostMultiplier = 1.0
Transmog.TokenRequired = 0
Transmog.TokenEntry = 0
Transmog.TokenAmount = 1